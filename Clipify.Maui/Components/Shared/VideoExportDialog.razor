@using System.Text.RegularExpressions
@using FFmpeg.NET
@using FFmpeg.NET.Events

@inject IVideoService VideoService
@inject IMessageService MsgService

<div class="@((_visible ? "flex" : "hidden") + " fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50")">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white dark:bg-gray-800 dark:border-gray-700">
        <div class="mt-3 text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">导出视频</h3>
            <div class="mt-5 px-7 py-3">
                @switch (Status.Status) {
                    case StatusEnum.Running:
                        <div class="flex items-center justify-center gap-4">
                            <div role="status">
                                <svg aria-hidden="true" class="inline w-10 h-10 text-gray-200 animate-spin dark:text-gray-600 fill-blue-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                                    <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                                </svg>
                                <span class="sr-only">Loading...</span>
                            </div>
                            <div>正在导出视频</div>
                        </div>
                        <div class="mt-4">
                            <div class="w-full bg-gray-200 rounded-full dark:bg-gray-700 mb-2">
                                <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full" style="width: @(Status.Progress)%"> @(Status.Progress)%</div>
                            </div>
                        </div>
                        break;
                    case StatusEnum.Finish:
                        <div class="flex items-center justify-center gap-4">
                            <i class="fa-solid fa-circle-check text-green-600 text-4xl"></i>
                            <div>搞定！</div>
                        </div>
                        <div class="mt-6">已保存到 @OutputDir</div>
                        break;
                    case StatusEnum.Error:
                        <div class="flex items-center justify-center gap-4">
                            <i class="fa-solid fa-triangle-exclamation text-red-500 text-4xl"></i>
                            <div>出错了</div>
                        </div>
                        break;
                    case StatusEnum.None:
                    default:
                        <div class="flex items-center justify-center gap-4">
                            <i class="fa-regular fa-circle-question text-blue-500 text-4xl"></i>
                            <div>空状态</div>
                        </div>
                        break;
                }
                <div class="py-3 mt-6 flex items-center text-gray-500 before:flex-1 before:border-t before:border-gray-200 before:me-6 after:flex-1 after:border-t after:border-gray-200 after:ms-6 dark:text-white dark:before:border-neutral-600 dark:after:border-neutral-600">状态信息</div>
                <div class="text-gray-500 text-sm">@Status.Message</div>
            </div>
            <div class="items-center px-4 py-3">
                <button @onclick="() => _visible = false" disabled="@(!CanClose)"
                        class="@(CanClose ? "bg-blue-500 hover:bg-blue-700" : "bg-gray-400") text-white px-4 py-2 mt-2 rounded">
                    确定
                </button>
            </div>
        </div>
    </div>
</div> 